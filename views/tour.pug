extends base

include _reviewCard

mixin overviewBoxGuides(name,role,img)
    .overview-box__detail
        img.overview-box__img(src=`/img/users/${img}`, alt=`${role}`)
        span.overview-box__label= role
        span.overview-box__text= name



mixin overviewBoxFacts(label,date,icon)
    .overview-box__detail
       svg.overview-box__icon
           use(xlink:href=`/img/icons.svg#icon-${icon}`)
       span.overview-box__label= label
       span.overview-box__text= date

block append head
    link(href='https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.css' rel='stylesheet')
    


block content
    section.section-header
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

        .heading-box
            h1.heading-primary
                span= tour.name
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-clock')
                    span.heading-box__text= `${tour.duration} days` 
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-map-pin')
                    span.heading-box__text= tour.startLocation.description

    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Quick facts

                    - const date=tour.startDates[0].toLocaleString('en-In',{month:'long',day:'numeric'})

                    +overviewBoxFacts('Next date',date,'calendar')
                    +overviewBoxFacts('Difficulty',tour.difficulty,'trending-up')
                    +overviewBoxFacts('Partcipants',`${tour.maxGroupSize} people`,'user')
                    +overviewBoxFacts('Rating',`${tour.ratingsAverage} / 5`,'star')

                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Your tour guides
                    each guide in tour.guides
                        if(guide.role==='guide')
                            +overviewBoxGuides(guide.name,'tour-guide',guide.photo)
                        if(guide.role==='lead-guide') 
                            +overviewBoxGuides(guide.name,guide.role,guide.photo)
                        
                    
        .description-box
            h2.heading-secondary.ma-bt-lg= `About ${tour.name} tour`
            - const paragraphs=tour.description.split('\n')
            each para in paragraphs
                p.description__text=para

    section.section-pictures
        each img,i in tour.images
            .picture-box
                img.picture-box__img(src=`/img/tours/${img}`, alt=`${tour.name} ${i+1}` class=`picture-box__img--${i+1}`)

    section.section-map
        #map(data-locations=`${JSON.stringify(tour.locations)}`)

    section.section-reviews
        .reviews
            each review in tour.reviews
                +reviewCard(review)

    section.section-cta
        .cta
            .cta__img.cta__img--logo
                img(src='/img/logo-white.png', alt='Natours logo')
            img.cta__img.cta__img--1(src=`/img/tours/${tour.images[1]}`, alt=`${tour.name}`)
            img.cta__img.cta__img--2(src=`/img/tours/${tour.images[2]}`, alt=`${tour.name}`)
            .cta__content
                h2.heading-secondary What are you waiting for?
                p.cta__text= `${tour.duration} days. 1 adventure. Infinite memories. Make it yours today!`
                button.btn.btn--green.span-all-rows Book tour now!